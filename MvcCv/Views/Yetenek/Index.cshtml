@using MvcCv.Models.Entity
@model List<TblYetenek>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string renk = "";}
@{ string labelrenk = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Yetenek/YetenekEkle/" class="btn btn-danger">Yeni yetenek ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Yetenek</th>
    
                                            <th>Seviye</th>
                                            <th style="width: 40px">Yüzde</th>
                                            <th >Düzenle</th>
                                            <th >Sil</th>
                                          
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (@item.Oran <= 50 && @item.Oran >= 0)
                                            {
                                                renk = "progress-bar progress-bar-danger";
                                                labelrenk = "progress-bar progress-bar-danger";
                                            } 
                                            if (@item.Oran >= 51 && @item.Oran <= 70)
                                            {
                                                renk = "progress-bar bg-warning";
                                                labelrenk = "progress-bar bg-warning";
                                            }
                                              if (@item.Oran >= 71 && @item.Oran <= 84)
                                            {
                                                renk = "progress-bar bg-info";
                                                labelrenk = "progress-bar bg-info";
                                            }    if (@item.Oran >= 85 && @item.Oran <= 100)
                                            {
                                                renk = "progress-bar bg-success";
                                                labelrenk = "progress-bar bg-success";
                                            }

                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.Yetenek</td>

                                            <td>
                                                <div class="progress progress-xs">
                                                    <div class="@renk" style="width: @item.Oran%"></div>
                                                </div>
                                            </td>
                                            <td><span class="@labelrenk">@item.Oran</span></td>
                                         
                                            <td>
                                                <a class="btn btn-success btn-sm" href="/Yetenek/YetenekGetir/@item.ID">
                                                    <i class="fas fa-pencil-alt">
                                                    </i>
                                                    Düzenle
                                                </a>
                                            </td>
                                            <td>
                                                <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@item.ID">
                                                    <i class="fas fa-trash">
                                                    </i>
                                                    Sil
                                                </a>
                                            </td>
                                        </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>